{
  "private": true,
  "name": "esun",
  "packageManager": "pnpm@7.6.0",
  "author": "dingxyang <https://github.com/dingxyang>",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "husky install",
    "build": "turbo run build",
    "test": "jest",
    "lint": "eslint .",
    "pub": "pnpm publish --filter './packages/**'",
    "commit": "git add . && cz",
    "clear": "rimraf 'packages/*/.turbo'",
    "clear:all": "rimraf 'packages/*/{.turbo,node_modules}' && rimraf node_modules",
    "changeset": "changeset",
    "pre": "pnpm changeset pre enter beta",
    "pre:exit": "pnpm changeset pre exit",
    "version-packages": "changeset version",
    "release": "pnpm build && pnpm release:only",
    "release:only": "changeset publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.25.2",
    "@changesets/cli": "^2.24.1",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/jest": "^28.1.6",
    "@types/node": "^17.0.35",
    "@umijs/test": "^4.0.9",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.20.0",
    "father": "^4.0.0-rc.7",
    "husky": "8.0.1",
    "jest": "^28.1.3",
    "lerna": "4.0.0",
    "lint-staged": "13.0.2",
    "only-allow": "^1.1.1",
    "prettier": "2.5.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "turbo": "^1.4.2"
  },
  "keywords": [],
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
